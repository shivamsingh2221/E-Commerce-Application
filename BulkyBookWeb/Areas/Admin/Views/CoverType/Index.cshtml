@model IEnumerable<CoverType> 
@{
    ViewData["Title"] = "Index";
}
<partial name="_Notification" />
<div class=" container p-3">
    <div class="row pt-4">  
        <div class="col-6">
             <h2 class="text-primary align-text-left">CoverType List</h2>
        </div>
        <div class="col-6 text-end">
           <a asp-controller="CoverType" asp-action="Create" class="btn btn-primary" >
              <i class="bi bi-node-plus"></i> &nbsp; Create New CoverType
           </a>
        </div>
    </div>
    <br /> <br />


<table class="table table-boredered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Category Name
            </th>
        </tr>

    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td width="50%">
                    @obj.Name
                </td>
                
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="CoverType" asp-action="Edit"  asp-route-id="@obj.Id"><i class="bi bi-pencil-fill"></i>Edit</a>
                    </div>
                </td>
                 <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="CoverType" asp-action="Delete"  asp-route-id="@obj.Id"><i class="bi bi-trash3-fill"></i>Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>

</table>
</div>